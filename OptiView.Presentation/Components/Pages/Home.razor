@page "/"
@using OptiView.Application.DTOs
@using OptiView.Domain.Entities
@using OptiView.Domain.Interfaces
@inject IMachineService MachineService
@inject NavigationManager NavigationManager

<div class="page-wrapper">
<div class="hero-section">
    <div class="hero-background">
        <div class="hero-grid"></div>
        <div class="hero-gradient"></div>
    </div>
    <div class="hero-content">
        <div class="hero-badge">
            <i class="fas fa-rocket"></i>
            <span>Next Generation Monitoring</span>
        </div>
        <h1 class="hero-title">Industrial Machine Park Management</h1>
        <p class="hero-subtitle">Experience real-time monitoring and precise control of your industrial machinery with our cutting-edge platform</p>
        <div class="hero-cta">
            <button class="cta-button primary" @onclick="NavigateToMachines">
                <i class="fas fa-microchip"></i>
                View Machines
                <i class="fas fa-arrow-right"></i>
            </button>
            <button class="cta-button secondary">
                <i class="fas fa-play"></i>
                Watch Demo
            </button>
        </div>
    </div>

    <div class="stats-overview">
        @if (machines == null)
        {
            <div class="loading-container">
                <div class="loader"></div>
                <p>Loading statistics...</p>
            </div>
        }
        else
        {
            <div class="stats-grid">
                <StatCard Icon="fas fa-microchip"
                          Label="Total Machines"
                          Value="@(machines.Count)"
                          Trend="+12% from last month"
                          CssClass="total" />

                <StatCard Icon="fas fa-check-circle"
                          Label="Online"
                          Value="@(machines.Count(m => m.Status == MachineStatus.Online))"
                          Percentage="@(GetPercentage(m => m.Status == MachineStatus.Online))"
                          Trend="5% improvement"
                          CssClass="online" />

                <StatCard Icon="fas fa-times-circle"
                          Label="Offline"
                          Value="@(machines.Count(m => m.Status == MachineStatus.Offline))"
                          Percentage="@(GetPercentage(m => m.Status == MachineStatus.Offline))"
                          Trend="-3% this week"
                          CssClass="offline" />

                <StatCard Icon="fas fa-tools"
                          Label="In Maintenance"
                          Value="@(machines.Count(m => m.Status == MachineStatus.Maintenance))"
                          Percentage="@(GetPercentage(m => m.Status == MachineStatus.Maintenance))"
                          Trend="On schedule"
                          CssClass="maintenance" />
            </div>
        }
    </div>
</div>

<div class="features-section">
    <div class="features-header">
        <span class="features-badge">Platform Features</span>
        <h2 class="section-title">Powerful Capabilities</h2>
        <p class="section-subtitle">Discover how our platform transforms industrial operations</p>
    </div>

    <div class="features-grid">
        <FeatureCard Icon="fas fa-chart-line"
                     Title="Real-time Monitoring"
                     Description="Track temperature, pressure, speed, and power usage in real-time"
                     IconBackground="bg-gradient-primary" />

        <FeatureCard Icon="fas fa-cog"
                     Title="Status Management"
                     Description="Easily switch between online, offline, and maintenance states"
                     IconBackground="bg-gradient-success" />

        <FeatureCard Icon="fas fa-network-wired"
                     Title="Data Collection"
                     Description="Automated telemetry data collection and analysis"
                     IconBackground="bg-gradient-info" />

        <FeatureCard Icon="fas fa-tools"
                     Title="Maintenance Tracking"
                     Description="Schedule and monitor maintenance activities"
                     IconBackground="bg-gradient-warning" />
    </div>
</div>

<div class="testimonials-section">
    <div class="testimonials-header">
        <span class="testimonials-badge">Testimonials</span>
        <h2 class="section-title">Trusted by Industry Leaders</h2>
    </div>

    <div class="testimonials-grid">
        <div class="testimonial-card">
            <div class="testimonial-content">
                <i class="fas fa-quote-left"></i>
                <p>"OptiView has transformed how we manage our industrial operations. The real-time monitoring is invaluable."</p>
            </div>
            <div class="testimonial-author">
                <img src="/images/avatar1.jpg" alt="Industrial Manager" />
                <div>
                    <h4>Sarah Johnson</h4>
                    <p>Operations Director, TechManufacturing Inc.</p>
                </div>
            </div>
        </div>

        <div class="testimonial-card">
            <div class="testimonial-content">
                <i class="fas fa-quote-left"></i>
                <p>"The maintenance tracking feature has helped us reduce downtime by 45%. Exceptional platform!"</p>
            </div>
            <div class="testimonial-author">
                <img src="/images/avatar2.jpg" alt="Maintenance Manager" />
                <div>
                    <h4>Michael Chen</h4>
                    <p>Maintenance Manager, GlobalTech Industries</p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<style>
    :root {
        --primary: #2563eb;
        --primary-dark: #1d4ed8;
        --success: #059669;
        --info: #0891b2;
        --warning: #d97706;
        --background: #0f172a;
        --card-bg: rgba(30, 41, 59, 0.7);
        --border: rgba(71, 85, 105, 0.3);
    }

    .page-wrapper {
        z-index: 10;
        position: relative;
        min-height: 100vh;
        overflow-x: hidden;
    }

    .hero-section {
        position: relative;
        min-height: 100vh;
        background: var(--background);
        color: white;
        padding: 2rem;
        overflow: hidden;
    }

    .hero-grid {
        position: absolute;
        z-index: 1;
        inset: 0;
        background-image: linear-gradient(to right, rgba(71, 85, 105, 0.1) 1px, transparent 1px), linear-gradient(to bottom, rgba(71, 85, 105, 0.1) 1px, transparent 1px);
        background-size: 50px 50px;
        transform: perspective(1000px) rotateX(60deg);
        transform-origin: top;
        animation: grid-move 20s linear infinite;
    }

        .hero-grid::after {
            content: '';
            position: absolute;
            width: 15px;
            height: 15px;
            background: radial-gradient(circle, rgba(96, 165, 250, 1) 0%, rgba(37, 99, 235, 0) 70%);
            filter: blur(5px);
            transform-origin: center;
            animation: light-travel 8s linear infinite;
            z-index: 2;
        }

    @@keyframes light-travel {
        0% {
            left: -5%;
            top: -5%;
            opacity: 0;
        }

        25% {
            opacity: 1;
        }

        75% {
            opacity: 1;
        }

        100% {
            left: 105%;
            top: 105%;
            opacity: 0;
        }
    }

    .hero-background {
        position: fixed;
        inset: 0;
        z-index: 0;
        pointer-events: none;
    }


    .hero-gradient {
        z-index: 2;
        position: fixed;
        inset: 0;
        background: radial-gradient(circle at 50% 50%, rgba(37, 99, 235, 0.15) 0%, rgba(15, 23, 42, 0.95) 100%);
        pointer-events: none;
    }

    .hero-content {
        position: relative;
        z-index: 10;
        max-width: 64rem;
        margin: 0 auto;
        text-align: center;
        padding-top: 8rem;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(37, 99, 235, 0.1);
        border: 1px solid rgba(37, 99, 235, 0.2);
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        margin-bottom: 2rem;
        font-size: 0.875rem;
        color: #60a5fa;
    }

    .hero-title {
        font-size: 4rem;
        line-height: 1.1;
        font-weight: 700;
        margin-bottom: 1.5rem;
        background: linear-gradient(to right, #ffffff 20%, #60a5fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: title-shine 3s ease-in-out infinite;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        line-height: 1.75;
        color: #94a3b8;
        margin-bottom: 3rem;
        max-width: 42rem;
        margin-left: auto;
        margin-right: auto;
    }

    .hero-cta {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 4rem;
    }

    .cta-button {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.2s;
    }

        .cta-button.primary {
            background: linear-gradient(to right, var(--primary), var(--primary-dark));
            color: white;
        }

        .cta-button.secondary {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .cta-button:hover {
            transform: translateY(-2px);
        }

    .hero-content,
    .stats-overview,
    .features-section,
    .testimonials-section {
        position: relative;
        z-index: 2;
    }
    /* Stats Section */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 2rem;
        max-width: 72rem;
        margin: 0 auto;
    }

    @@media (min-width: 768px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (min-width: 1024px) {
        .stats-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .stat-card {
        background: rgba(30, 41, 59, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(71, 85, 105, 0.3);
        border-radius: 1rem;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(37, 99, 235, 0.2);
        }

    .stat-icon {
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.75rem;
        font-size: 1.25rem;
    }

        .stat-icon.total {
            background: linear-gradient(135deg, #2563eb, #2993eb );
        }

        .stat-icon.online {
            background: linear-gradient(135deg, #059669, #059699);
        }

        .stat-icon.offline {
            background: linear-gradient(135deg, #dc2626, #dc5926);
        }

        .stat-icon.maintenance {
            background: linear-gradient(135deg, #d97706, #d19906);
        }

    .stat-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(to right, #ffffff, #60a5fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-trend {
        font-size: 0.875rem;
        color: #34d399;
    }

    /* Features Section */
    .features-section,
    .testimonials-section {
        position: relative;
        z-index: 1;
    }

    .features-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .features-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(37, 99, 235, 0.1);
        border: 1px solid rgba(37, 99, 235, 0.2);
        border-radius: 9999px;
        color: #60a5fa;
        font-size: 0.875rem;
        margin-bottom: 1rem;
    }

    .section-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(to right, #ffffff, #60a5fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .section-subtitle {
        color: #94a3b8;
        font-size: 1.25rem;
        max-width: 36rem;
        margin: 0 auto;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 2rem;
        max-width: 72rem;
        margin: 0 auto;
    }

    @@media (min-width: 768px) {
        .features-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (min-width: 1024px) {
        .features-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .feature-card {
        color: #ffffff;
        backdrop-filter: blur(10px);
        border: 1px solid var(--border);
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    .feature-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 4rem;
        height: 4rem;
        border-radius: 1rem;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
    }
/* 
    .bg-gradient-primary {
        background: linear-gradient(135deg, var(--primary), black);
    }

    .bg-gradient-success {
        background: linear-gradient(135deg, var(--success), black);
    }

    .bg-gradient-info {
        background: linear-gradient(135deg, var(--info), black);
    }

    .bg-gradient-warning {
        background: linear-gradient(135deg, var(--warning), black);
    } */

    /* Testimonials Section */
    .testimonials-section {
        background: var(--background);
        padding: 8rem 2rem;
    }

    .testimonials-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .testimonials-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(37, 99, 235, 0.1);
        border: 1px solid rgba(37, 99, 235, 0.2);
        border-radius: 9999px;
        color: #60a5fa;
        font-size: 0.875rem;
        margin-bottom: 1rem;
    }

    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 2rem;
        max-width: 72rem;
        margin: 0 auto;
    }

    @@media (min-width: 768px) {
        .testimonials-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .testimonial-card {
        background: var(--card-bg);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border);
        border-radius: 1rem;
        padding: 2rem;
        transition: all 0.3s ease;
    }

        .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    .testimonial-content {
        margin-bottom: 2rem;
    }

        .testimonial-content i {
            font-size: 2rem;
            color: #60a5fa;
            margin-bottom: 1rem;
        }

        .testimonial-content p {
            color: #94a3b8;
            font-size: 1.125rem;
            line-height: 1.75;
        }

    .testimonial-author {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .testimonial-author img {
            width: 3rem;
            height: 3rem;
            border-radius: 9999px;
            object-fit: cover;
        }

        .testimonial-author h4 {
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .testimonial-author p {
            color: #94a3b8;
            font-size: 0.875rem;
        }

    /* Animations */

    @@keyframes grid-move {
        0% {
            transform: perspective(500px) rotateX(60deg) translateY(0);
        }

        100% {
            transform: perspective(500px) rotateX(60deg) translateY(50px);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 0.5;
        }

        50% {
            opacity: 0.8;
        }
    }

    @@keyframes title-shine {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    /* Loading Animation */
    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        padding: 2rem;
    }

    .loader {
        width: 2.5rem;
        height: 2.5rem;
        border: 4px solid rgba(37, 99, 235, 0.1);
        border-top-color: #60a5fa;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }

        @@keyframes grid-move {
            0% {
                transform: perspective(1000px) rotateX(60deg) translateY(0);
            }

            100% {
                transform: perspective(1000px) rotateX(60deg) translateY(50px);
            }
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 0.5;
            }

            50% {
                opacity: 0.8;
            }
        }

</style>

@code {
    [Parameter] public string Icon { get; set; }
    [Parameter] public string Label { get; set; }
    [Parameter] public int Value { get; set; }
    [Parameter] public string Percentage { get; set; }
    [Parameter] public string CssClass { get; set; }
}



